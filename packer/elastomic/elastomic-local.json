{
  "variables": {
    "version": "0.9.01"
  },
  "builders": [
    {
      "type": "vmware-iso",
      "boot_command": [
        "<esc>",
        "<wait>linux inst.ks=hd:/dev/fd0:ks.cfg<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": 81920,
      "floppy_files": [
        "floppy_files/ks.cfg"
      ],
      "guest_os_type": "rhel7_64Guest",
      "headless": false,
      "iso_urls": [
        "CentOS-7-x86_64-Minimal-2009.iso",
        "http://mirrors.mit.edu/centos/7/isos/x86_64/CentOS-7-x86_64-Minimal-2009.iso"
      ],
      "iso_checksum": "sha256:07b94e6b1a0b0260b94c83d6bb76b26bf7a310dc78d7a9c7432809fb9bc6194a",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "1800s",
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "vm_name": "packer-elastomic"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./ansible/elastomic-playbook.yml"
    },
    {
      "type": "shell",
      "scripts": "./scripts/install-atomicredteam.ps1"
    },
    {
      "type": "shell",
      "scripts": "./scripts/install-caldera.sh"
    },
    {
      "type": "shell",
      "scripts": "./scripts/cleanup.sh",
      "execute_command": "echo 'packer' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": "8",
      "output": "../_output/{{.Provider}}-dev-elastomic-{{timestamp}}.box"
    }
  ]
}
